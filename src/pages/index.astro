  </section>

  <!-- Apps Portfolio Section -->
  <section id="apps" class="py-20 bg-neon-purple pattern-dots px-6">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-5xl md:text-7xl font-bold mb-4 text-shadow-thick rotate-slight-reverse inline-block text-cream">
        The Apps
      </h2>
      <p class="text-2xl mb-16 text-cream">Things I've built that people actually use</p>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Outrun -->
